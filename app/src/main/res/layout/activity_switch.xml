<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchActivity"
    android:orientation="vertical"
    android:padding="40dp">

    <Switch
        android:id="@+id/sw_texto"
        android:layout_width="160dp"
        android:layout_height="63dp"
        android:checked="false"
        android:text="Primer Switch"
        android:thumbTint="#D00C0C"
        android:trackTint="#03A9F4"
        android:layout_gravity="center">
    </Switch>

    <TextView
        android:id="@+id/tv_switchtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Este texto aparece cuando pulso el Switch"
        android:textSize="16dp">

    </TextView>


</LinearLayout>